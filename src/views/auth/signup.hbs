<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registro</h3>
                </div>
                <div class="card-body">
                    <form id="signup-form" action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Nombre" class="form-control" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="surname" placeholder="Apellido" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <select id="idrol" name="idrol" class="form-control" required>
                                <option value="" disabled selected>Selecciona un rol</option>
                                <option value="1">Administrador</option>
                                <option value="2">Empleado</option>
                                <option value="3">Técnico</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="user" placeholder="Usuario" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Contraseña" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="phone" placeholder="Teléfono" class="form-control" pattern="\d{10}" title="El teléfono debe tener exactamente 10 dígitos" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="cedula" placeholder="Cédula" class="form-control" pattern="\d{10}" title="La cédula debe tener exactamente 10 dígitos" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('signup-form').addEventListener('submit', function(event) {
        const phoneInput = document.querySelector('input[name="phone"]');
        const cedulaInput = document.querySelector('input[name="cedula"]');
        
        const phone = phoneInput.value;
        const cedula = cedulaInput.value;
        
        const phonePattern = /^\d{10}$/;
        const cedulaPattern = /^\d{10}$/;
        
        if (!phonePattern.test(phone)) {
            alert('El teléfono debe tener exactamente 10 dígitos.');
            event.preventDefault();
        }
        
        if (!cedulaPattern.test(cedula)) {
            alert('La cédula debe tener exactamente 10 dígitos.');
            event.preventDefault();
        }
    });
</script>
